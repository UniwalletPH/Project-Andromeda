@model Andromeda.Models.DTRReportVM
@{
    ViewData["Title"] = "DailyReport";
}
<br/><br>
<h1>DTR REPORT</h1>


<form class="form-group" asp-action="ViewRecord" asp-controller="Dashboard" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess">
    <div class="form-group">
        @Html.LabelFor(m => m.Names)
        @Html.DropDownListFor(m => m.Selected, Model.Names, "SELECT EMPLOYEE", new { @class = "form-control" })
    </div>

    <div class="row">
        <div class="col-md-4">
            <div>
                <label class="control-label">FROM</label>
                <input asp-for="From" class="form-control" />               
               <br> <label class="control-label">TO</label>
                <input asp-for="To" class="form-control" />             
            </div>
        </div>
    </div>
    <div class="form-group">
        <br /><input type="submit" value="SUBMIT" class="btn btn-primary" />
    </div>
</form>

<div id="recordview">
    <div class="record-content"></div>
</div>


@section Scripts {
    <script type="text/javascript">
        function OnSuccess(e) {
            console.log(e);
            $('#recordview .record-content').html(e);           
    }
    </script>

    <partial name="_ValidationScriptsPartial" />
}
