@model Andromeda.Models.ChangeUsernameVM
@{
    ViewData["Title"] = "ChangeUsername";
}


<div class="text-center">
    <h2>CHANGE USERNAME</h2>
    <br>
</div>

<form asp-action="ChangeUsername" asp-controller="Account" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess">

    <div class="row">
        <div class="col-md-4">

            <div class="form-group">
                <label class="control-label">NEW USERNAME</label>
                <input asp-for="NewUsername" class="form-control" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">CONFIRM USERNAME</label>
                <input id="txtConfirmUsername" class="form-control" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="CONFIRM" class="btn btn-primary" />
            </div>

        </div>
    </div>

</form>



@section Scripts {
    <script type="text/javascript">
        function OnSuccess(e) {
            console.log(e);
    }
    </script>

    <partial name="_ValidationScriptsPartial" />
}